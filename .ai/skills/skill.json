{
  "name": "php-package-ai-skill",
  "version": "0.0.7",
  "title": "PHP Composer Package Architect",
  "description": "An AI skill that designs, scaffolds, and evolves high-quality PHP Composer packages using test-first, PSR-compliant, and maintainable architecture patterns.",
  "author": "Raphael Stolt",
  "license": "MIT",
  "tags": [
    "php",
    "composer",
    "symfony-console",
    "cli",
    "testing",
    "phpunit",
    "static-analysis",
    "psr",
    "open-source",
    "skill"
  ],
  "capabilities": [
    "Scaffold new PHP Composer packages",
    "Design service-oriented architecture",
    "Generate Symfony Console commands",
    "Write PHPUnit or PEST tests",
    "Use zenstruck/console-test for Symfony Console and PHPUnit based CLI applications",
    "Refactor code safely",
    "Maintain PSR-12 and PHP 8.2+ compatibility",
    "Generate README, CHANGELOG and documentation",
    "Add an AI skill to `.ai/skills/{{skill-name}}.md` for CLI applications"
  ],
  "inputs": {
    "required": [
      "package_name",
      "vendor_name",
      "description"
    ],
    "optional": [
      "php_version",
      "frameworks",
      "cli_commands",
      "features",
      "license"
    ]
  },
  "outputs": [
    "composer.json",
    ".gitattributes",
    "src/",
    "tests/",
    "README.md",
    ".github/workflows/",
    "phpunit.xml.dist",
    "phpstan.neon.dist",
    ".ai/skills/{{skill-name}}.md"
  ],
  "standards": {
    "php": "^8.2",
    "coding": "PSR-12",
    "testing": "PHPUnit or PEST",
    "cli": "Symfony Console",
    "static_analysis": "PHPStan"
  }
}